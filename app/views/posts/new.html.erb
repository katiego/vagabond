<center>

<div class='col-md-6 col-md-offset-3' style='max-width: 300px;' >
	<h1>New Post</h1>
			<%= form_for @post do |f| %>
				 <p>
				   Title: <%= f.text_field :title, class:"form-control"%>
				 </p>

				 <p>
				   Body: <%= f.text_area :body, class:"form-control" %>
				 </p>

				 <%= f.hidden_field :city_id, value: @city.id %>
				 
				 <p>
				 <%= f.label :tag_list, "Tags (separated by commas)" %>
				 <%= f.text_field :tag_list %>
				 </p>
				 
				 <p>
				   <%= f.submit%>
				 </p>

			<% end  %>
		</div>
</center>