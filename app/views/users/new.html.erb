
<center>

<div class='col-md-6 col-md-offset-3' style='max-width: 300px;' >
<h1>Sign Up</h1>

<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
  <%= f.text_field :first_name, class:"form-control", :placeholder => "First name" %><br>
  <%= f.text_field :last_name, class:"form-control", :placeholder => "Last name" %><br>
   <%= f.text_field :city, class:"form-control", :placeholder => "City" %><br>
  <%= f.email_field :email, class:"form-control", :placeholder => "Email" %><br>
  <%= f.password_field :password, class:"form-control", :placeholder => "Password" %><br>
  <p align='left'> Profile picture (pets only!): <%= f.file_field :avatar%><br>
  </p>
  <%= f.submit "Create an account", class: "btn btn-submit" %>
<% end %>


</center>
