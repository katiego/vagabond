<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
	<div class="logo">Sign Up</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="register-form" class="text-left">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
							<%= form_for @user do |f| %>
							  <%= f.text_field :first_name, placeholder: "First Name", class: "form-control", id:"reg_username", name:"reg_username"%><br>
							  <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control", id:"reg_username", name:"reg_username" %><br>
							  <%= f.text_field :city, placeholder: "City", class: "form-control", id:"reg_username", name:"reg_username" %> <br>
							 <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", id:"lg_username", name:"lg_username" %> <br>
							 <%= f.password_field :password, class: "form-control", placeholder: "Password", id: "lg_password", name: "lg_password" %><br>
							  <%= f.submit ">", class: "btn btn-default login-button" %>
							<% end %>

					</div>
				</div>
			</div>
			<div class="etc-login-form">
				<p>already have an account? <a href="/login">login here</a></p>
			</div>
		</form>
	</div>
	<!-- end:Main Form -->
</div>

